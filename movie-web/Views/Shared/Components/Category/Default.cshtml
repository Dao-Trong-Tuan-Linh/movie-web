@using movie_web.Models;
@model IList<Category>
@using movie_web.Utilities;

<div class="col-lg-12">
    <div class="categories">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h2>Browse Through Our <em>Categories</em> Here.</h2>
                </div>
            </div>
            @foreach(var item in Model)
            {
                string url = Functions.TitleslugGeneration("list", item.CategoryName, item.CategoryID);
                <div class="col-lg-2 col-sm-6">
                    <div class="item">
                        <div class="icon">
                            <img src="@item.Image" alt="">
                        </div>
                        <h4>@item.CategoryName</h4>
                        <div class="icon-button">
                            <a  href="/@url"><i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
                
            }
        </div>
    </div>
</div>

