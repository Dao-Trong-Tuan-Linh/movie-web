@using movie_web.Models;
@using movie_web.Utilities;
@model IList<Film>

<div class="col-lg-12">
    <div class="collections">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h2>Explore Some Hot <em>Collections</em> In Market.</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="owl-collection owl-carousel">
                    @foreach(var item in Model)
                    {
                        
                        <div class="item">
                            
                            <img src="@item.Image" alt="">
                            <div class="down-content">
                                <h4 class="text-truncate">@item.FilmName</h4>
                                <span class="collection">Score:<br><strong>@item.Score/10</strong></span>
                                <span class="category">Category:<br><strong>@item.CategoryName</strong></span>
                                <div class="main-button">
                                    <a href="explore">Watch now</a>
                                </div>
                            </div>
                        </div>
                    }
                    
                    
                </div>
            </div>
        </div>
    </div>
</div>

