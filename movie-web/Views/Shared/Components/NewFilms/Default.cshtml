<div class="currently-market">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h2><em>New films</em> Currently In The Market.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="filters">
                    <ul>
                        <li data-filter="*" class="active">All Items</li>
                        <li data-filter=".6">Action</li>
                        <li data-filter=".5">Romance</li>
                        <li data-filter=".4">Cartoon</li>
                        <li data-filter=".1">Humor</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="row grid">
                    @foreach (var item in Model){
                    <div class="col-lg-6 currently-market-item all @item.GenreID">
                        <div class="item">
                            <div class="left-image">
                                <img src="@item.Image" alt="" style="border-radius: 20px; min-width: 195px;">
                            </div>
                            <div class="right-content">
                                    <h4 class=" d-inline">@item.FilmName</h4>
                                <span class="author">
                                    <img src="~/assets/images/author.jpg" alt="" style="max-width: 50px; border-radius: 50%;">
                                    <h6>Liberty Artist<br><a href="#">libertyart</a></h6>
                                </span>
@*                                
                                <span class="bid">
                                    Current Bid<br><strong>2.03 ETH</strong>
                                </span>*@
                                <p class="ends">
                                        Ends In<br><strong>@item.Date</strong>
                                </p>
                                <div class="text-button">
                                    <a href="details.html">View Item Details</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
